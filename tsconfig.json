{
  "compilerOptions": {
    // ... (o resto das suas configurações) ...
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOMIterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    
    /* Outras configurações que já existam... */
    
    // Configurações de React/JSX
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  
  // Adicione a secção 'exclude' ou atualize se já existir
  "include": ["src", "types.ts"],
  "exclude": ["vite.config.ts", "vite.config.node.ts", "dev-dist"]
}